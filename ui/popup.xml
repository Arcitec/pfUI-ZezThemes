<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Frame name="ZezThemesPopup" parent="UIParent" frameStrata="DIALOG" toplevel="true"
        enableMouse="true" hidden="true">
        <Size x="400" y="120" />
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
            edgeFile="Interface\DialogFrame\UI-DialogBox-Border"
            tile="true">
            <TileSize val="32" />
            <EdgeSize val="32" />
            <BackgroundInsets left="11" right="12" top="12" bottom="11" />
        </Backdrop>

        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentTitle" inherits="GameFontNormal" text="ZezThemes Updated">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="TOP">
                            <Offset x="0" y="-18" />
                        </Anchor>
                    </Anchors>
                </FontString>

                <FontString name="$parentText" inherits="GameFontHighlight" justifyH="CENTER">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                            <Offset x="20" y="-22" />
                        </Anchor>
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT">
                            <Offset x="-20" y="30" />
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <Button name="$parentOKButton" inherits="UIPanelButtonTemplate"
                text="Open pfUI Settings">
                <Size x="100" y="24" />
                <Anchors>
                    <Anchor point="BOTTOM" relativePoint="BOTTOM">
                        <Offset x="0" y="16" />
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        this:GetParent():Hide()
                        pfUI.gui:Show()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>